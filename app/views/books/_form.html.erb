<% if f.object.errors.any? %>
  <div style="color: red">
    <h2><%= pluralize(f.object.errors.count, "error") %> prohibited this book from being saved:</h2>

    <ul>
      <% f.object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<table summary="Book form fields">
  <tr>
    <th>Title</th>
    <td><%= f.text_field :title %></td>
  </tr>
  <tr>
    <th>Author</th>
    <td><%= f.text_field :author %></td>
  </tr>
  <tr>
    <th>Price</th>
    <td><%= f.number_field :price, step: 0.01 %></td>
  </tr>
  <tr>
    <th>Published Date</th>
    <td><%= f.date_select :published_date, start_year: 1900, end_year: Date.today.year %></td>
  </tr>
</table>
