<p style="color: green"><%= notice %></p>

<%= link_to("Back to List", books_path, class: 'back-link') %>

<div class="book show">
  <h2>Show book</h2>

  <table summary="Book detail view">
    <tr>
      <th>Title</th>
      <td><%= @book.title %></td>
    </tr>
    <tr>
        <th>Created</th>
        <td><%= @book.created_at %></td>
    </tr>
    <tr>
        <th>Updated</th>
        <td><%= @book.updated_at %></td>
    </tr>
  </table>
</div>
